{% extends  layout %}

{% import 'macros/message-box.njk' as messages %}

{% block  content %}

    {{ messages.message("Make yourself a Docker run command for the best image there ever was ;)")}}

    <div class="flex form-wrapper">
        <div>
            <form action="javascript:;">
                <label for="PORT">Port</label>
                <input type="number" id="PORT" value="443" required></label>

                <label for="API_KEY">API Key</label>
                <input type="text" id="API_KEY" required></label>

                <label for="FROM_EMAIL">From Email (must be matched with API key)</label>
                <input type="email" id="FROM_EMAIL" required></label>

                <label for="SSL_KEY">SSL Key</label>
                <textarea id="SSL_KEY"></textarea required>

                <label for="SSL_CRT">SSL Certificate</label>
                <textarea id="SSL_CRT"></textarea required>

                <div class="flex flex--small margin-top--medium">
                    <button class="button" type="submit" id="convert">Update</button>
                    <button class="button" id="copy">Copy</button>
                </div>
            </form>
        </div>

        <div>
            <label for="config">Config</label>
            <textarea id="config" class="config"></textarea>
        </div>
    </div>

{% endblock %}

{% block extraScripts %}
    <script src="js/constructor-form.js"></script>
{% endblock %}