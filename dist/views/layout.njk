{% import 'macros/message-box.njk' as messages %}

<!doctype html>

<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{{ title }}</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {% if noIndex %}<meta name="robots" content="noindex">{% endif %}
        
        {# Adds the js class to the html root before the style sheet is loaded #}
        <script>document.documentElement.classList='js'</script>

        <link rel="stylesheet" href="css/styles.css">
    </head>

    <body class="{{bodyClass}}">
        <div class="content dark" id="content">
            <header>
                <nav></nav>
            </header>
            
            <main class="main">
                <div class="brick">
                    <h1>{{h1}}</h1>
                    {% block content %}{% endblock %}
                </div>
            </main>

            <footer></footer>
        </div>

        {% block scripts %}{# For site level scripts #}

            <script src="js/brightness-mode.js"></script>

            {% block extraScripts %}{% endblock %}{# For page level scripts #}

        {% endblock %}

    </body>
</html>